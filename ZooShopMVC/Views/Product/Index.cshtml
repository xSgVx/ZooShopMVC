@model IEnumerable<ZooShopMVC.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 my-2">
            <h2 class="text-primary">Product List</h2>
        </div>

        <div class="col-6 my-auto text-end">
            <a asp-action="Upsert" asp-controller="Product" class="btn btn-dark">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Category</th>
                    <th>Product ApplicationType</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="10%">@obj.Price</td>
                        <td width="20%">@obj.Category.Name</td>
                        <td width="20%">@obj.ApplicationType.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                               
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-sharp fa-solid fa-trash"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            No product exists
        </p>
    }


</div>

